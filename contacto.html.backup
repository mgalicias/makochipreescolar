  <body>
    <header>
      <div class="container header-content">
        <div class="logo">
          <a href="index.html">
            <img
              src="images/logo.png"
              alt="Logotipo de Makochi Preescolar"
            />
          </a>
        </div>
        <nav>
          <ul>
            <li><a href="index.html">Inicio</a></li>
            <li><a href="nosotros.html">Nosotros</a></li>
